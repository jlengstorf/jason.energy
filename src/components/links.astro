<style>
	.links {
		--max-size: min(100cqi, 720px);
		--cols: 12;
		--rows: 29;

		@media (min-width: 470px) {
			--rows: 21;
		}

		container: bento / inline-size;
		display: grid;
		grid-template-columns: repeat(
			var(--cols),
			calc((var(--max-size) / var(--cols)))
		);
		grid-template-rows: repeat(
			var(--rows),
			calc((var(--max-size) / var(--cols)))
		);
		inline-size: var(--max-size);
		margin-inline: auto;
	}

	.items {
		align-items: start;
		background: var(--gray-700);
		display: grid;
		gap: 4px;
		grid-template-columns: subgrid;
		grid-template-rows: subgrid;
		grid-column: span 12;
		grid-row: span 27;
		order: 2;
		padding: 4px;

		@media (min-width: 600px) {
			grid-row: span 15;
		}

		a {
			color: inherit;
			text-decoration: none;
		}

		.item {
			align-items: center;
			block-size: 100%;
			color: var(--gray-100);
			display: flex;
			flex-direction: column;
			gap: 4px;
			justify-content: center;

			&:not(:has(.item)) {
				background: var(--gray-600);
				border: 1px solid transparent;
				border-radius: 3px;
				container: item / inline-size;
				transition: all 100ms ease-in-out;

				&:is(:hover, :active, :focus) {
					background: var(--gray-900);
					border-color: var(--gray-600);
					scale: calc(100% + 20px);
				}
			}

			&.lg {
				grid-column: span 6;
				grid-row: span 6;

				svg {
					block-size: auto;
					inline-size: 80cqi;
				}
			}

			&.md {
				grid-column: span 4;
				grid-row: span 4;
			}

			&.sm {
				grid-column: span 3;
				grid-row: span 3;

				svg {
					block-size: auto;
					inline-size: min(40cqi, 60px);
				}
			}

			&.span-2 {
				grid-row: span 2;
			}

			&.short {
				grid-row: span 3;
			}

			&.xs-expander {
				grid-column: span 12;
				grid-row: span 8;

				&.xs-short {
					grid-row: span 6;
				}

				@media (min-width: 470px) {
					grid-column: span 6;
					grid-row: span 6;
				}
			}

			img {
				block-size: auto;
				inline-size: 60cqi;

				&.logos {
					inline-size: 80cqi;
				}
			}

			&.social {
				display: flex;
				flex-direction: column;
				font-size: clamp(0.75rem, 2cqi, 1rem);
				gap: 6px;

				img {
					max-inline-size: min(32cqi, 60px);
				}
			}
		}
	}

	.image {
		background: var(--gray-700);
		border: 4px solid transparent;
		border-block-end: 0;
		block-size: 100%;
		grid-column: span 12;
		grid-row: span 6;
		inline-size: 100%;
		margin: 0;
		order: 1;
		position: relative;

		img {
			block-size: 100%;
			border-radius: 3px;
			display: block;
			inline-size: 100%;
			object-fit: cover;
			object-position: 50% 7%;
		}

		figcaption {
			background: color-mix(in oklch, var(--gray-600) 50%, transparent);
			backdrop-filter: blur(6px);
			border-radius: 3px;
			color: var(--gray-100);
			inset-block-end: 10px;
			inset-inline-end: 10px;
			position: absolute;
			z-index: 10;

			a {
				color: inherit;
				display: block;
				font-size: 0.75rem;
				line-height: 1;
				padding: 8px 12px;
				text-decoration: none;
			}
		}
	}

	.shrinky {
		font-size: clamp(0.75rem, 5cqi, 3rem);
		max-inline-size: 90cqi;
		text-align: center;
		text-wrap: balance;
	}

	.fake-btn {
		--size: clamp(0.625rem, 4.5cqi, 2.75rem);

		background: var(--pink);
