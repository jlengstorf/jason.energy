---
export interface Props {
	id: string;
}

const { id } = Astro.props;
---

<aside class="fntext" id={id}><slot /></aside>

<style>
	aside {
		background: var(--gray-600);
		block-size: 0;
		border-radius: 3px;
		color: var(--gray-200);
		font-size: 0.875em;
		margin-inline: -16px;
		overflow-y: hidden;
		padding: 0 16px;
		transition-property: block-size, padding;
		transition-duration: 250ms;
		transition-timing-function: linear;

		@starting-style {
			block-size: 0;
			padding: 0 16px;
		}

		&.visible {
			block-size: max-content;
			display: block;
			padding: 16px;
		}

		> * {
			margin: 0;

			&:not(:first-child) {
				margin-top: 16px;
			}
		}
	}
</style>
